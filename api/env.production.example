# Fresh Veggies Production Environment Configuration

# Database - Use your production database URL
DATABASE_URL=postgresql://username:password@your-db-host:5432/fresh_veggies

# JWT Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secret-production-key-here-minimum-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Server Configuration
ENVIRONMENT=production
DEBUG=false
FRONTEND_URL=https://your-frontend-domain.com

# Redis (Optional - for caching)
REDIS_URL=redis://your-redis-host:6379

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Google Maps API (Required for location features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# SMS Service Configuration - Choose ONE provider
SMS_PROVIDER=free_sms

# Option 1: TextBee (FREE Android SMS Gateway - RECOMMENDED)
TEXTBEE_API_KEY=your_textbee_api_key_here
TEXTBEE_DEVICE_ID=your_textbee_device_id_here

# Option 2: Twilio (Paid service)
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_NUMBER=+1234567890

# Option 3: TextLocal (India SMS provider)
# SMS_PROVIDER=textlocal
# TEXTLOCAL_API_KEY=your_api_key
# TEXTLOCAL_SENDER=FVEGGIE

# Warehouse Location (Delhi coordinates)
WAREHOUSE_LAT=28.6139
WAREHOUSE_LNG=77.2090

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Production Database Backup (Optional)
# BACKUP_DATABASE_URL=postgresql://backup-user:password@backup-host:5432/fresh_veggies_backup 